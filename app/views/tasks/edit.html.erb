<div class="h-100 d-flex align-items-center justify-content-center">
  <div>
    <h1>Edit: <%= @task.title %></h1>
    <div class="d-inline-block">
      <%= form_for(@task) do |f| %>
        <%= f.label :title, class:"form-label" %>
        <%= f.text_field :title, class:"form-control", rows:"3" %>
        <%= f.label :details , class:"form-label" %>
        <%= f.text_field :details, class:"form-control", rows:"3" %>
        <%= f.label :completed %>
        <%= f.check_box :completed, class:"btn btn-primary mb-3" %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
